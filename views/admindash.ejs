	<div class = "maindash">
		<center><h2>Welcome to Dashboard</h2></center>
    <img src="images/admin.png" alt="User : Admin" width="150" height="150" ALIGN="left" />
    <br>
    <br>
        <p><b>&emsp; Logged In As </b> - <%= username%></p>
        
        <p><b>&emsp; Last Login Time </b> - <%= datetimeinfo[0].dt%> <%= datetimeinfo[0].time%></p>
    <br>
    <br>
    <br>
      
        <h2 style="color: #7c795d; font-family: 'Trocchi', serif; font-size: 25px; font-weight: normal; line-height: 48px; margin: 0;">Total number of students enrolled : <%= numberOfStudents %></h2>
        <h2 style="color: #7c795d; font-family: 'Trocchi', serif; font-size: 25px; font-weight: normal; line-height: 48px; margin: 0;">Number of electives in system : <%= numberOfElectives %> </h2>
        <h2 style="color: #7c795d; font-family: 'Trocchi', serif; font-size: 25px; font-weight: normal; line-height: 48px; margin: 0;">Total number of applications : <%= numberOfElectivesOpted   %> </h2>
        <h2 style="color: #7c795d; font-family: 'Trocchi', serif; font-size: 25px; font-weight: normal; line-height: 48px; margin: 0;">Number of distinct students who opted electives : <%= numberOfDistinctStudents %>   </h2>

    <form action="/downloadAllStudents" method="post">
      <button style="cursor: pointer;
      border: none;
      background: linear-gradient(to right top, #051937, #004d7a, #008793, #00bf72, #a8eb12);
      color: #FFF;
      margin: 0 0 5px;
      padding: 10px;
      font-size: 15px;" type="submit">Download Students registered in system</button>
    </form>
	</div>


  <div class="verticalLine" >
  </div>

  <div>
    <div>  
      <form id="contact" action="/ateacherprofile" method="post">
        <h2>Enter the username of faculty to be searched</h2>
          <input placeholder="Enter username" type="text" name="teacher" required>
          <button type="submit" id="contact-submit" data-submit="...Sending">Search</button>
      </form>
    </div>
  
  <div>  
    <form id="contact" action="/astudentprofile" method="post">
      <h2>Enter the enrollment number of student to be searched</h2>
        <input placeholder="Enter enrollment number" type="text" name="student" required>
        <button type="submit" id="contact-submit" data-submit="...Sending">Search</button>
        
    </form>
  </div>
  <br>
  <hr>
  <br>
  <% if(  result1 == 1){ %>
  <div style="border: 1px solid black; text-align: center;">
    <h3>Name : <%=faculty.first_name %> <%=faculty.last_name %></h3>
    <h3>Username : <%=faculty.username %> </h3>
    <h3>Gender : <%= faculty.gender %> </h3>
  </div>
    <h4> <b>Subjects taught : </b> </h4>
  <% for(var i=0 ;i < courses.length ; i++) { %>
    <div style="border: 1px solid black; text-align: center;">
    <p> <b>Course Name : </b> <%= courses[i].courseName %> &emsp; <b>Course ID : </b><%= courses[i].courseCode %></p>
    <p><b>Required Min GPA :</b><%= courses[i].minGPA %> &emsp; <b>Semester :</b><%= courses[i].semester %></h3></p>
  </div>
  <% } %>
<% } %>
<% if(  result1 == 0 ){ %>
  <div style="border: 1px solid black">
    <h3>Faculty does not exist</h3>
  </div>
<% } %>

<% if(  result2 == 1){ %>
  <div style="border: 1px solid black; text-align: center;">
  <h3>Name : <%=student.first_name %> <%=student.last_name %></h3>
  <h3>Enrollment Number : <%=student.rollNumber %> </h3>
  <h3>Email Address: <%= student.email_address %> </h3>
  <h3>Semester : <%= student.semester %> </h3>
  <h3>GPA : <%= student.GPA %> </h3>
  <h3>Gender : <%= student.gender %> </h3>
  <h3>Contact Number : <%= (student.contactno==null || student.contactno=="")?"NA":student.contactno %> </h3>
  <h3>Hostel Number : <%= (student.hostelno==null || student.hostelno== "")?"NA":student.hostelno %> </h3>
  <h3>Room Number : <%= (student.roomno==null || student.roomno=="")?"NA":student.roomno %> </h3>
  </div>
<% } %>
<% if(result2 == 0 ){ %>
  <div style="border: 1px solid black; text-align: center;">
  <h3>Student does not exist</h3>
</div>
<% } %>
