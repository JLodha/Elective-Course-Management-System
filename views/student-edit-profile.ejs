<div class="container">  
  <!-- <div class="container">   -->
    <form id="contact" action="/studenteditprofile" method="post">
  
   <% if(userData.linear == 0 ) {%>
      <p>User Doesn't exist</p>

   <% } else{ %>
      <% var data = userData[0] %>
      <h3>Update Student Profile</h3>
  
      <h7>Roll Number</h7>
      <fieldset>
        <input type="text" tabindex="1" name="rollno" value=<%=data.rollNumber %> readonly>
      </fieldset>
      <h7>First Name</h7>
      <fieldset>
        <input type="text" tabindex="2" name="fname" value=<%=data.first_name %> readonly>
      </fieldset>
      <h7>Last Name</h7>
      <fieldset>
        <input type="text" tabindex="3" name="lname" value=<%=data.last_name %> readonly>
      </fieldset>

      <h7>GPA</h7>
      <fieldset>
        <input type="number" tabindex="4" name="gpa" value=<%=data.GPA %> readonly>
      </fieldset>
      <h7>Semester</h7>
    <fieldset>
      <input type="number" tabindex="5" name="semester" value=<%=data.semester %> readonly>
    </fieldset>

      <h7>Gender</h7>
      <fieldset>
        <input type="text" tabindex="6" name="gender" value=<%=data.gender %> readonly>
      </fieldset>
      
      <h7>Email</h7>
      <fieldset>
        <input type="email" tabindex="7" name="email" value=<%=data.email_address %> >
      </fieldset>

      <h7>Contact Number</h7>
      <fieldset>
        <input type="number" tabindex="8" name="cno" value=<%=data.contactno %> >
      </fieldset>

      <h7>Hostel No.</h7>
      <fieldset>
        <input type="number" tabindex="9" name="hno" value=<%=data.hostelno %> >
      </fieldset>

      <h7>Room No.</h7>
      <fieldset>
        <input type="number" tabindex="10" name="rno" value=<%=data.roomno %>>
      </fieldset>

      <hr>
      <h7><b>New Password</b></h7>
      <p><i>If you do not wish to change then leave this field empty</i></p>
      <fieldset>
        <input type="password" tabindex="11" name="newpwd" >
      </fieldset>
      <h7><b>Current Password</b></h7>
      <p><i>Enter your current password to confirm the changes.</i></p>
      <fieldset>
        <input type="password" tabindex="12" name="currpwd" >
      </fieldset>
      <fieldset>
        
        <button name="submit" type="submit" id="contact-submit" data-submit="...Sending" onclick="return confirmSubmit()">Update</button>

      </fieldset>
  </form>
   <% } %>

</div>
</html>