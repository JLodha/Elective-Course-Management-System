<td align="center"><input type="checkbox"><%=data.third_elective %></td> -->
<td align="center">
 <select id="electives_first">
    <option value=<%=data.first_elective %>><%=data.first_elective %></option>
    <option value=<%=data.second_elective %>><%=data.second_elective %></option>
    <option value=<%=data.third_elective %>><%=data.third_elective %></option>
    </select>
</td>
<td align="center">
     <select id="electives_second">
       <option value=<%=data.first_elective %>><%=data.first_elective %></option>
       <option value=<%=data.second_elective %>><%=data.second_elective %></option>
        <option value=<%=data.third_elective %>><%=data.third_elective %></option>
       </select>
   </td>
   <td align="center">
    <select id="electives_third">
        <option value=<%=data.first_elective %>><%=data.first_elective %></option>
        <option value=<%=data.second_elective %>><%=data.second_elective %></option>
        <option value=<%=data.third_elective %>><%=data.third_elective %></option>
        </select>
   </td>
</tr>

 
<% i++; }) %>
<% } else { %>
    <tr>
        <td align="center">No Data Found</td>
    </tr>
<% } %>
</tbody>
</table>
<br>
<br>
<center><button id="elect_course" type="submit">Elect Courses</button></center>  
</form>




